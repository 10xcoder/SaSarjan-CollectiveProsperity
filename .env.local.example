# Supabase Configuration (Required)
# For local development, use: http://localhost:54321
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Auth Security Keys (Required for production)
# Generate these using: ./scripts/generate-auth-keys.sh
HMAC_SECRET_KEY=your-secure-hmac-key-at-least-32-chars
TOKEN_ENCRYPTION_KEY=your-secure-encryption-key-32-chars
JWT_SECRET=your-jwt-secret-key-32-chars

# Cookie Configuration
NEXT_PUBLIC_COOKIE_DOMAIN=.localhost # For local development
# NEXT_PUBLIC_COOKIE_DOMAIN=.yourdomain.com # For production

# App URLs (adjust ports as needed)
NEXT_PUBLIC_WEB_URL=http://localhost:3000
NEXT_PUBLIC_ADMIN_URL=http://localhost:3004
NEXT_PUBLIC_TALENTEXCEL_URL=http://localhost:3001
NEXT_PUBLIC_SEVAPREMI_URL=http://localhost:3002
NEXT_PUBLIC_10XGROWTH_URL=http://localhost:3003

# OAuth Configuration (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Payment Configuration (Optional)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Mapbox Configuration (Optional)
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your_mapbox_access_token

# Monitoring and Analytics (Optional)
SENTRY_DSN=your_sentry_dsn
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Email Service Configuration (Optional)
EMAIL_PROVIDER=resend
FROM_EMAIL=noreply@sasarjan.com
FROM_NAME=SaSarjan
RESEND_API_KEY=your_resend_api_key
SENDGRID_API_KEY=your_sendgrid_api_key

# WhatsApp Configuration (Optional)
WHATSAPP_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890
META_ACCESS_TOKEN=your_meta_access_token
META_PHONE_NUMBER_ID=your_meta_phone_number_id
META_BUSINESS_ACCOUNT_ID=your_meta_business_account_id

# Rate Limiting (Optional - Upstash Redis)
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# Environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000 # Override per app

# Database (Optional - for direct connections)
DATABASE_URL=your_postgres_connection_string