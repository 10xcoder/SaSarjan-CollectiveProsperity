{
  "name": "@sasarjan/auth",
  "version": "1.0.0",
  "description": "Shared authentication package for SaSarjan App Store",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "generate-keys": "tsx scripts/generate-jwt-keys.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:integration": "playwright test",
    "test:integration:ui": "playwright test --ui",
    "test:integration:headed": "playwright test --headed",
    "test:security": "vitest run tests/security",
    "test:all": "pnpm test:run && pnpm test:integration",
    "test:ci": "vitest run --coverage --reporter=junit --outputFile=test-results.xml"
  },
  "keywords": [
    "auth",
    "authentication",
    "supabase",
    "shared"
  ],
  "author": "SaSarjan Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.50.3",
    "@types/cookie": "^1.0.0",
    "cookie": "^1.0.2",
    "jose": "^5.2.0",
    "nanoid": "^5.0.4",
    "zustand": "^5.0.2",
    "typescript": "^5.5.4"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.16.0",
    "@types/react": "^18.3.23",
    "@playwright/test": "^1.53.2",
    "@vitest/coverage-v8": "^2.1.0",
    "@vitest/ui": "^2.1.0",
    "jsdom": "^25.0.0",
    "playwright": "^1.53.2",
    "react": "^18.0.0",
    "tsx": "^4.20.3",
    "vitest": "^2.1.0",
    "whatwg-fetch": "^3.6.2"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./client-only": {
      "types": "./dist/client-only.d.ts",
      "import": "./dist/client-only.js",
      "require": "./dist/client-only.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js",
      "require": "./dist/types.js"
    }
  }
}
