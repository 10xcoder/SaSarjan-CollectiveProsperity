{
  "name": "@sasarjan/social-media",
  "version": "1.0.0",
  "description": "Reusable social media posting and management module for SaSarjan App Store",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "social-media",
    "posting",
    "scheduling",
    "linkedin",
    "twitter",
    "facebook",
    "instagram",
    "cross-platform"
  ],
  "author": "SaSarjan Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "cron": "^3.1.6",
    "nanoid": "^5.0.4",
    "zod": "^3.22.0",
    "zustand": "^5.0.2"
  },
  "peerDependencies": {
    "@sasarjan/auth": "workspace:*",
    "@sasarjan/database": "workspace:*",
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.16.0",
    "@types/react": "^18.3.23",
    "happy-dom": "^18.0.1",
    "react": "^19.0.0",
    "typescript": "^5.5.4",
    "vitest": "^3.2.4"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.js"
    },
    "./api": {
      "types": "./dist/api/index.d.ts",
      "import": "./dist/api/index.js",
      "require": "./dist/api/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js",
      "require": "./dist/components/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js",
      "require": "./dist/hooks/index.js"
    },
    "./platforms": {
      "types": "./dist/platforms/index.d.ts",
      "import": "./dist/platforms/index.js",
      "require": "./dist/platforms/index.js"
    }
  }
}
